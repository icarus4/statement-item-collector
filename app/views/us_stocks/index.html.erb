<h3>Statistics:</h3>
<ul>
  <li>Parsed stocks count: <%= Stock.all.size %></li>
  <li>Parsed statements count: <%= Statement.all.size %></li>
  <li>Parsed XBRL names count: <%= Item.all.size %></li>
</ul>
<hr>
<h3>Results</h3>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Standard Item Name</th>
      <th>XBRL name</th>
    </tr>
  </thead>
  <tbody style="font-family: Verdana">
  <% @s_items.each do |si| %>
  <tr>
    <td><%= si.name %></td>
    <td>
      <ul class='xbrl-name'>
      <% si.items.each do |item| %>
        <li>
          <%= link_to "#{item.name}", item_path(item) %> <%= "(#{item.stocks_count} stocks)" %>
        </li>
      <% end %>
      </ul>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>
