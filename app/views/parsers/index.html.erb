<div id="search-area">
<h3 style='margin: 50px'>statement item collector</h3>

<%= form_tag({controller: 'parsers', action: 'search'}, method: 'get', id: 'search-form') do %>
  <%= label_tag(:ticker, "查詢 TWSE 股號: ") %> <%= number_field_tag(:ticker, nil, min: 1000, max: 9999) %>
  <%= select_tag(:year, options_for_select([ ['2014', 2014], ['2013', 2013]], 1)) %>
  <%= select_tag(:quarter, options_for_select([ ['Q1', 1], ['Q2', 2], ['Q3', 3], ['Q4', 4]], 1)) %>
  <%= submit_tag("Search") %>
<% end %>
</div>
