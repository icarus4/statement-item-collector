<h3>Standard-Item: <span style='color: brown'><%= @si.name %></span></h3>

<hr>

<h4>List of exactly matched XBRL names</h4>
<table class="table table-striped table-condensed">
  <thead>
    <th>標準欄位名稱</th>
    <th>股票含此標準欄位總數</th>
  </thead>
  <tbody style="font-family: Verdana">
  <% @exactly_matched_items.each do |item| %>
    <tr>
      <td>
        <% if item.namespace != 'us-gaap' %><%= "#{item.namespace}:" %><% end %>
        <%= link_to "#{item.name} ", item_path(item), target: '_blank' %>
      </td>
      <td>
         <%= "#{item.stocks.size}" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<hr>

<h4>List of <span style="color: red;">NOT</span> exactly matched XBRL names</h4>
<table class="table table-striped table-condensed">
  <thead>
    <th>標準欄位名稱</th>
    <th>股票含此標準欄位總數</th>
  </thead>
  <tbody style="font-family: Verdana">
  <% @not_exactly_matched_items.each do |item| %>
    <tr>
      <td>
        <% if item.namespace != 'us-gaap' %><%= "#{item.namespace}:" %><% end %>
        <%= link_to "#{item.name}", item_path(item), target: '_blank' %>
      </td>
      <td>
         <%= "#{item.stocks.size}" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>


